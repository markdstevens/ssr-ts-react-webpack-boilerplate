{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["es2015", "es2016", "es2017", "es2019.array", "dom"],
    "outDir": "./dist/",
    "sourceMap": true,
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "react",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./src",
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "strict": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "paths": {
      "config": ["config/index.ts"],
      "components/*": ["components/*"],
      "views/*": ["views/*"],
      "stores/*": ["stores/*"],
      "controllers/*": ["controllers/*"],
      "utils/*": ["utils/*"],
      "styles/*": ["styles/*"],
      "images/*": ["images/*"],
      "platform/client": ["platform/client/src/index.ts"],
      "platform/components": ["platform/components/src/index.ts"],
      "platform/server": ["platform/server/src/index.ts"],
      "platform/stores": ["platform/stores/src/index.ts"],
      "platform/utils": ["platform/utils/src/index.ts"],
      "platform/views": ["platform/views/src/index.ts"],
      "platform/controllers": ["platform/controllers/src/index.ts"]
    },
    "typeRoots": ["./src/typings", "./node_modules/@types"],
    "types": ["jest"]
  },
  "include": ["./src/**/*", "./test/**/*"]
}
