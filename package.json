{
  "name": "react-ts",
  "version": "0.0.1",
  "main": "./dist/server.js",
  "author": "Mark Stevens <mdstevens94@gmail.com>",
  "license": "MIT",
  "scripts": {
    "webpack": "tsc --lib es6 webpack.*.config.ts && npm-run-all -p webpack:client webpack:server && rm webpack.*.config.js",
    "webpack:client": "webpack --config webpack.client.config.js",
    "webpack:server": "webpack --config webpack.server.config.js",
    "start": "rimraf dist && NODE_ENV=production pnpm run webpack && NODE_ENV=production node dist/server.js",
    "nodemon": "nodemon",
    "watch": "NODE_ENV=development onchange 'src/**/*.{ts,tsx}' -- pnpm run webpack",
    "start:dev": "rimraf dist && NODE_ENV=development pnpm run webpack && npm-run-all -p watch nodemon",
    "lint": "tsc --noEmit && eslint '*/**/*.{js,ts,tsx}' --quiet --fix"
  },
  "devDependencies": {
    "@loadable/webpack-plugin": "^5.7.1",
    "@types/express": "^4.17.2",
    "@types/loadable__component": "^5.10.0",
    "@types/loadable__server": "^5.9.1",
    "@types/node": "^12.12.21",
    "@types/react": "^16.9.17",
    "@types/react-dom": "^16.9.4",
    "@types/react-router-dom": "^5.1.3",
    "@types/terser-webpack-plugin": "^2.2.0",
    "@types/webpack": "^4.41.0",
    "@types/webpack-bundle-analyzer": "^2.13.3",
    "@types/webpack-merge": "^4.1.5",
    "@types/webpack-node-externals": "^1.7.0",
    "@typescript-eslint/eslint-plugin": "^2.12.0",
    "@typescript-eslint/parser": "^2.12.0",
    "babel-loader": "^8.0.6",
    "eslint": "^6.8.0",
    "eslint-plugin-react": "^7.17.0",
    "eslint-plugin-react-hooks": "^2.3.0",
    "nodemon": "^2.0.2",
    "nodemon-webpack-plugin": "^4.2.2",
    "npm-run-all": "^4.1.5",
    "onchange": "^6.1.0",
    "rimraf": "^3.0.0",
    "terser-webpack-plugin": "^2.3.1",
    "ts-loader": "^6.2.1",
    "ts-node": "^8.5.4",
    "tsconfig-paths-webpack-plugin": "^3.2.0",
    "typescript": "^3.7.4",
    "webpack": "^4.41.4",
    "webpack-bundle-analyzer": "^3.6.0",
    "webpack-cli": "^3.3.10",
    "webpack-merge": "^4.2.2",
    "webpack-node-externals": "^1.7.2"
  },
  "dependencies": {
    "@babel/core": "^7.7.7",
    "@loadable/babel-plugin": "^5.11.0",
    "@loadable/component": "^5.11.0",
    "@loadable/server": "^5.11.0",
    "axios": "^0.19.0",
    "express": "^4.17.1",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-router-dom": "^5.1.2"
  }
}
